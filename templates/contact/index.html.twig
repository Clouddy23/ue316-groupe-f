{% extends 'base.html.twig' %}

{% block title %}Contactez-nous - Evergreen{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white text-center py-4">
                    <h2 class="mb-0">üìß Contactez-nous</h2>
                    <p class="mb-0 mt-2">Une question ? Un projet ? √âcrivez-nous !</p>
                </div>
                <div class="card-body p-4">
                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">{{ message }}</div>
                    {% endfor %}

                    {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.name, 'Votre nom', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.name, {'attr': {'class': 'form-control', 'placeholder': 'Jean Dupont'}}) }}
                                {{ form_errors(form.name) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.email, 'Votre email', {'label_attr': {'class': 'form-label'}}) }}
                                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'jean@exemple.fr'}}) }}
                                {{ form_errors(form.email) }}
                            </div>
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.subject, 'Sujet', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.subject, {'attr': {'class': 'form-control', 'placeholder': 'Objet de votre message'}}) }}
                            {{ form_errors(form.subject) }}
                        </div>
                        <div class="mb-4">
                            {{ form_label(form.message, 'Message', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.message, {'attr': {'class': 'form-control', 'rows': 6, 'placeholder': 'D√©crivez votre demande...'}}) }}
                            {{ form_errors(form.message) }}
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-success btn-lg px-5">
                                Envoyer le message
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Infos de contact -->

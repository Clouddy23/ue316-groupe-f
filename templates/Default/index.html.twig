{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<div class="jumbotron mb-4">
    <h1 class="display-4">PROJET SYMFONY </h1>
    <p class="lead">Bienvenue sur la page d'accueil.</p>
</div>

<div class="container p-0">
    <h2 class="mb-2">Derniers posts</h2>
    <div class="row">
        {% for post in posts %}
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ post.title }}</h5>
                        <p class="card-text">{{ post.content|slice(0, 100) }}...</p>
                        <div class="mt-auto">
                            <a href="{{ path('app_post_show', {'slug': post.slug}) }}" class="btn btn-primary">Lire la suite <i class="bi bi-arrow-right ms-2"></i></a>
                            <small class="text-muted d-block mt-2">{{ post.publishedAt ? post.publishedAt|date('d/m/Y') : '' }}</small>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun article trouv√©.</p>
        {% endfor %}
    </div>
</div>
{% endblock %}

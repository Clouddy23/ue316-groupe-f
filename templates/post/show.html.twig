{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Evergreen{% endblock %}

{% block body %}
<div class="container py-5">
    <!-- Article -->
    <article class="mb-5">
        <h1 class="mb-3">{{ post.title }}</h1>
        <p class="text-muted">
            Par <strong>{{ post.author.email }}</strong> | 
            Publié le {{ post.publishedAt|date('d/m/Y à H:i') }}
        </p>
        <hr>
        <div class="content" style="line-height: 1.8; font-size: 1.1rem;">
            {{ post.content|nl2br }}
        </div>
    </article>

    <!-- Actions admin -->
    {% if is_granted('ROLE_ADMIN') %}
        <div class="mb-4">
            <a href="{{ path('app_post_edit', {'id': post.id}) }}" class="btn btn-warning btn-sm">Modifier</a>
            {{ include('post/_delete_form.html.twig') }}
        </div>
    {% endif %}

    <hr>

    <!-- Section commentaires -->
    <section class="comments mt-5">
        <h3 class="mb-4">Commentaires ({{ post.comments|length }})</h3>

        <!-- Formulaire de commentaire -->
        {% if app.user %}
            <div class="card mb-4">
                <div class="card-body">
                    <h5 class="card-title">Laisser un commentaire</h5>
                    {{ form_start(commentForm) }}
                        {{ form_row(commentForm.content, {'label': 'Votre message', 'attr': {'rows': 4, 'class': 'form-control'}}) }}
                        <button type="submit" class="btn btn-success mt-2">Envoyer</button>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        {% else %}
            <div class="alert alert-info mb-4">
                <a href="{{ path('app_login') }}">Connectez-vous</a> pour laisser un commentaire.
            </div>
        {% endif %}

        <!-- Liste des commentaires -->
        <div class="comments-list">
            {% for comment in post.comments %}
                <div class="card mb-3 {% if comment.isFlagged %}border-warning{% endif %}">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <strong>{{ comment.author.email }}</strong>
                                <small class="text-muted ml-2">le {{ comment.createdAt|date('d/m/Y à H:i') }}</small>
                            </div>
                            <div>
                                {% if app.user %}
                                    {% if comment.isFlagged %}
                                        <span class="badge badge-warning mr-2">Signalé</span>
                                        <a href="{{ path('app_comment_flag', {'id': comment.id}) }}" class="btn btn-outline-success btn-sm">Annuler</a>
                                    {% else %}
                                        <a href="{{ path('app_comment_flag', {'id': comment.id}) }}" class="btn btn-outline-danger btn-sm">Signaler</a>
                                    {% endif %}
                                {% elseif comment.isFlagged %}
                                    <span class="badge badge-warning">Signalé</span>
                                {% endif %}
                            </div>
                        </div>
                        <p class="mb-0">{{ comment.content }}</p>
                    </div>
                </div>
            {% else %}
                <p class="text-muted">Aucun commentaire pour l'instant. Soyez le premier à réagir !</p>
            {% endfor %}
        </div>
    </section>

    <a href="{{ path('index') }}" class="btn btn-outline-success mt-4">← Retour à l'accueil</a>
</div>
{% endblock %}

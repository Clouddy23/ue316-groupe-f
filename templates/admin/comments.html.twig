{% extends 'admin/base.html.twig' %}
{% set active_tab = 'comments' %}

{% block title %}Commentaires - Admin{% endblock %}

{% block admin_content %}
<h2>ðŸ’¬ Gestion des commentaires</h2>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>#</th>
            <th>Contenu</th>
            <th>Auteur</th>
            <th>Article</th>
            <th>Statut</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for comment in comments %}
        <tr class="{% if comment.isFlagged %}table-warning{% endif %}">
            <td>{{ comment.id }}</td>
            <td>{{ comment.content|slice(0, 80) }}{% if comment.content|length > 80 %}...{% endif %}</td>
            <td>{{ comment.author.email }}</td>
            <td><a href="{{ path('app_post_show', {'slug': comment.post.slug}) }}" class="text-success">{{ comment.post.title|slice(0, 25) }}</a></td>
            <td>
                {% if comment.isFlagged %}
                    <span class="badge badge-warning">SignalÃ©</span>
                {% else %}
                    <span class="badge badge-success">OK</span>
                {% endif %}
            </td>
            <td>
                <form method="post" action="{{ path('admin_comment_toggle', {'id': comment.id}) }}" class="d-inline">
                    <input type="hidden" name="_token" value="{{ csrf_token('toggle' ~ comment.id) }}">
                    <button class="btn btn-sm btn-outline-{% if comment.isFlagged %}success{% else %}warning{% endif %}">
                        {% if comment.isFlagged %}Approuver{% else %}Signaler{% endif %}
                    </button>
                </form>
                <form method="post" action="{{ path('admin_comment_delete', {'id': comment.id}) }}" class="d-inline" onsubmit="return confirm('Supprimer ce commentaire ?')">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                    <button class="btn btn-sm btn-outline-danger">Supprimer</button>
                </form>
            </td>
        </tr>
        {% else %}
        <tr><td colspan="6" class="text-center text-muted">Aucun commentaire</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
